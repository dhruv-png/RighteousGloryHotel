@model RighteousGloryHotel.Models.Room

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="roomId" />
            <div class="form-group">
                <label asp-for="floor" class="control-label"></label>
                <input asp-for="floor" class="form-control" />
                <span asp-validation-for="floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="roomNo" class="control-label"></label>
                <input asp-for="roomNo" class="form-control" />
                <span asp-validation-for="roomNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control" type="file" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="balconyView" /> @Html.DisplayNameFor(model => model.balconyView)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="bed" /> @Html.DisplayNameFor(model => model.bed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="roomDescription" class="control-label"></label>
                <input asp-for="roomDescription" class="form-control" />
                <span asp-validation-for="roomDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
